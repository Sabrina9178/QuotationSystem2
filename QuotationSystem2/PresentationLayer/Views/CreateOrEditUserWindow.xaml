<Window x:Class="QuotationSystem2.PresentationLayer.Views.CreateOrEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuotationSystem2.PresentationLayer.Views"
        xmlns:loc="clr-namespace:QuotationSystem2.PresentationLayer.Services.Localization"
        mc:Ignorable="d"
        Title="{Binding windowTitle}"
        Height="300" Width="300" WindowStartupLocation="CenterOwner">
    
    <StackPanel Margin="20">
        <TextBlock Text="{loc:Loc Key=Name, ForceStatic=True}" />
        <TextBox Text="{Binding Name}" />

        <TextBlock Text="{loc:Loc Key=Account, ForceStatic=True}" Margin="0,10,0,0" />
        <TextBox Text="{Binding Account}"/>

        <TextBlock Text="{loc:Loc Key=Identity, ForceStatic=True}" Margin="0,10,0,0" />
        <ComboBox ItemsSource="{Binding Roles}"
                  SelectedItem="{Binding SelectedRole}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayNames, Converter={StaticResource TranslationDtoConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <TextBox Text="{Binding DefaultPasswordString}" IsReadOnly="True" Margin="0,10,0,0" 
                 BorderBrush="Transparent" Visibility="{Binding passwordVisibility}"
                 Foreground="Gray" FontSize="12"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{loc:Loc Key=Cancel, ForceStatic=True}" Width="60" Margin="0,0,10,0"
                    Command="{Binding CancelUserCreationCommand}"/>
            <Button Content="{loc:Loc Key=Confirm, ForceStatic=True}"
                    Command="{Binding ConfirmUserCreationCommand}" Width="60"/>
        </StackPanel>
    </StackPanel>
</Window>
