<Window x:Class="QuotationSystem2.PresentationLayer.Views.WaterMeterTeethPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuotationSystem2.PresentationLayer.Views"
        xmlns:loc="clr-namespace:QuotationSystem2.PresentationLayer.Services.Localization"
        mc:Ignorable="d"
        Title="{loc:Loc Key=WaterMeter|Teeth, ForceStatic=True}" Height="300" Width="500">
    <Grid>
        <DataGrid x:Name="TeethDataGrid" ItemsSource="{Binding TeethCollection}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{loc:Loc Key=Teeth|Type, ForceStatic=True}"
                                    Binding="{Binding TeethType}"
                                    Width="1*" />
                <DataGridTextColumn Header="{loc:Loc Key=Diameter, ForceStatic=True}"
                                    Binding="{Binding TeethDiameter}"
                                    Width="1*" />
                <DataGridTextColumn Header="{loc:Loc Key=UnitPrice, ForceStatic=True}"
                                    Binding="{Binding UnitPrice}"
                                    Width="1*" />
                <DataGridTextColumn Header="{loc:Loc Key=Quantity, ForceStatic=True}"
                                    Binding="{Binding Quantity}"
                                    Width="1*" />
                <DataGridTextColumn Header="{loc:Loc Key=Price, ForceStatic=True}"
                                    Binding="{Binding Price}"
                                    Width="1*" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
