<UserControl x:Class="QuotationSystem2.PresentationLayer.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuotationSystem2.PresentationLayer.Views"
             xmlns:loc="clr-namespace:QuotationSystem2.PresentationLayer.Services.Localization"
             xmlns:helpers="clr-namespace:QuotationSystem2.PresentationLayer.Utilities"
             mc:Ignorable="d" Margin="0,80,0,0">
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  Style="{StaticResource ScrollViewerStyle}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <!-- Company Name -->
            <TextBlock Text="{loc:Loc Key=CompanyName, ForceStatic=True}" 
                       HorizontalAlignment="Center" VerticalAlignment="Top"
                       FontSize="50" FontWeight="Black" />
            <TextBlock Text="{loc:Loc Key=QuotationSystem, ForceStatic=True}" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"
                       FontSize="50" FontWeight="Black"/>
            <Border Height="1" Width="800" Background="Gray" 
                    HorizontalAlignment="Center" Margin="0,40,0,40"/>
            <!-- Login Area -->
            <TextBlock Text="{loc:Loc Key=Login, ForceStatic=True}" 
                       HorizontalAlignment="Center" VerticalAlignment="Top"
                       FontWeight="Black" FontSize="40"/>
            <Grid HorizontalAlignment="Center" Margin="0,40,0,40">
                <Grid.RowDefinitions>
                    <!-- Account/Parrword -->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- title/:/input -->
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Account Row -->
                <TextBlock Text="{loc:Loc Key=Account, ForceStatic=True}"
                           Grid.Column="0" Grid.Row="0"
                           FontSize="18" VerticalAlignment="Center"/>
                <TextBlock Text=":" 
                           Grid.Column="1" Grid.Row="0"
                           FontSize="18" VerticalAlignment="Center" />
                <TextBox Text="{Binding AccountInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Column="2" Grid.Row="0" 
                         Width="200" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <!-- Password Row -->
                <TextBlock Text="{loc:Loc Key=Password, ForceStatic=True}"
                           Grid.Row="2" Grid.Column="0"
                           FontSize="18" VerticalAlignment="Center"/>
                <TextBlock Text=":" 
                           Grid.Column="1" Grid.Row="2"
                           FontSize="18" VerticalAlignment="Center"/>
                <PasswordBox Name="PasswordBox"
                             Grid.Column="2" Grid.Row="2" 
                             Width="200" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Grid>
            <!-- Login/Cancel Btn -->
            <StackPanel Grid.Row="4" Grid.Column="2" 
                        Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=PasswordBox}"
                        Content="{loc:Loc Key=Login}" Width="80" Height="30"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
