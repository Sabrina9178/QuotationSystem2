<UserControl x:Class="QuotationSystem2.PresentationLayer.Templates.QuotationViewTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuotationSystem2.PresentationLayer.Templates"
             xmlns:loc="clr-namespace:QuotationSystem2.PresentationLayer.Services.Localization"
             mc:Ignorable="d"
             x:Name="root">

    <Grid Margin="0,30,0,0">
        <Grid.RowDefinitions>
            <!-- Quotation/GridSplitter/Records -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="4" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Title, ElementName=root}"
                   FontSize="40"
                   FontWeight="Black"
                   Margin="0,0,0,30"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" />

        <!-- Quotation Area -->
        <Border BorderBrush="LightGray"
                BorderThickness="01"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource ScrollViewerStyle}"
                      HorizontalAlignment="Center"
                      >
            
            <Grid Margin="40,20,40,10"
                  MinHeight="510">
                <ContentPresenter Content="{Binding Sheet, ElementName=root}" />
            </Grid>
            
        </ScrollViewer>
        </Border>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="2"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Height="5"
                      Background="LightGray"
                      Cursor="SizeNS" />

        <!-- Record Area -->
        <Grid Margin="0"
              Grid.Row="3"
              VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- 按鈕列 -->
                <RowDefinition Height="*" />
                <!-- 內容區 -->
            </Grid.RowDefinitions>

            <!-- Button Area -->
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Margin="10,10,10,10"
                            DockPanel.Dock="Left">
                    <Button Content="{loc:Loc Key=Edit, ForceStatic=True}"
                            FontSize="12"
                            Height="25"
                            MinWidth="50"
                            Margin="0,0,10,0"
                            Command="{Binding EditRecord, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Visibility="{Binding EditRecordButtonVisibility, ElementName=root}" />
                    <Button Content="{loc:Loc Key=Delete, ForceStatic=True}"
                            FontSize="12"
                            Height="25"
                            MinWidth="50"
                            Margin="0,0,10,0"
                            Visibility="{Binding DeleteRecordButtonVisibility, ElementName=root}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Command"
                                        Value="{Binding DeleteSelectedRecord, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=SelectAllRecordsCheckBox}"
                                                 Value="True">
                                        <Setter Property="Command"
                                                Value="{Binding DeleteAllRecord, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="{loc:Loc Key=Export, ForceStatic=True}"
                            FontSize="12"
                            Height="25"
                            MinWidth="50"
                            Visibility="{Binding ExportRecordButtonVisibility, ElementName=root}"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Command"
                                        Value="{Binding ExportSelectedRecord, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=SelectAllRecordsCheckBox}"
                                                 Value="True">
                                        <Setter Property="Command"
                                                Value="{Binding ExportAllRecord, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <CheckBox x:Name="SelectThisPageCheckBox"
                              Content="{loc:Loc Key=SelectThisPage, ForceStatic=True}"
                              Visibility="{Binding SelectingCheckBoxVisibility, ElementName=root}"
                              Command="{Binding SelectThisPage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              VerticalAlignment="Center">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="1"
                                            ScaleY="1" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                    <CheckBox x:Name="SelectAllRecordsCheckBox"
                              Content="{loc:Loc Key=SelectAllRecords, ForceStatic=True}"
                              Margin="10,0,0,0"
                              Visibility="{Binding SelectingCheckBoxVisibility, ElementName=root}"
                              VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            HorizontalAlignment="Right"
                            Margin="10,10,10,10"
                            DockPanel.Dock="Right">

                    <Button Content="{loc:Loc Key=PreviousPage}"
                            FontSize="12"
                            Height="25"
                            MinWidth="60"
                            Margin="0,0,10,0"
                            Command="{Binding PreviousPage, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <TextBlock Text="{Binding PageCount, ElementName=root}"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0" />
                    <Button Content="{loc:Loc Key=NextPage}"
                            FontSize="12"
                            Height="25"
                            MinWidth="60"
                            Command="{Binding NextPage, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </StackPanel>
            </DockPanel>
            <!-- Content Area -->
            <ContentPresenter Grid.Row="1"
                              Content="{Binding GridContent, ElementName=root}" />

        </Grid>
    </Grid>
</UserControl>
