<Application x:Class="QuotationSystem2.App"  
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
            xmlns:local="clr-namespace:QuotationSystem2"  
            xmlns:com="clr-namespace:QuotationSystem2.PresentationLayer.Services.Localization"
            StartupUri="PresentationLayer/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <com:TranslationDtoConverter x:Key="TranslationDtoConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Style/Text.xaml"/>
                <ResourceDictionary Source="Resources/Style/ScrollViewer.xaml"/>
                <ResourceDictionary Source="Resources/Style/Button.xaml"/>

                <ResourceDictionary Source="PresentationLayer/Utilities/DataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>  
</Application>
